{
    "compilerOptions": {
        "target": "esNext", //компилируем в es6, можно использовать es5 для старых версий нода
        "module": "commonjs", //импорт модулей преобразуется в commonjs (node require)
        "sourceMap": false, //генерировать sourceMaps, нужно для отладки
        "outDir": "bundle/src", //проект билдится из папки /src в папку /build/src
        "rootDir": "src",
        "strict": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    //указывает что включаться должны только файлы из папки /src
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules", 
      "**/*.spec.ts", 
      "**/*.test.ts"
    ]
}